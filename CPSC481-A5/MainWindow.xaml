<Window x:Class="CPSC481_A5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_A5"
        mc:Ignorable="d"
        Title="Schedule Builder" Height="720" Width="1280
        ">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid x:Name="LeftGrid" HorizontalAlignment="Left" Height="689" Margin="0,0,0,0" VerticalAlignment="Top" Width="636">
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Canvas x:Name="FilterCanvas" Grid.Row ="0"  Height="330" VerticalAlignment="Top" Grid.RowSpan="2" >
                <TextBlock TextWrapping="Wrap" Background="#FFCAE6EC" Foreground="Black" FontSize="14" Text="Search for Classes" Padding="10,0,0,0" Height="23.721" Width="616"/>
                <TextBlock TextWrapping="Wrap" Text="Term" RenderTransformOrigin="0.5,0.5" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="34.721" Width="103.255"/>
                <TextBlock TextWrapping="Wrap" Text="Subject" RenderTransformOrigin="0.5,0.5" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="61.681" Width="103.255"/>
                <TextBlock TextWrapping="Wrap" Text="Course Number" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="88.641" Width="103.255"/>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="34.721">
                    <ComboBoxItem Content="Winter 2018"/>
                    <ComboBoxItem Content="Fall 2018"/>
                </ComboBox>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="89.681">
                    <ComboBoxItem Content="is exactly"/>
                    <ComboBoxItem Content="is greater than"/>
                    <ComboBoxItem Content="is less than"/>
                </ComboBox>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="230.853"/>
                <TextBox Height="23" Canvas.Left="303.372" TextWrapping="Wrap" Canvas.Top="89.681" Width="50"/>
                <Button x:Name="SearchButton" Content="Search" Canvas.Left="468" Canvas.Top="88" Width="75" Style="{DynamicResource YellowButtonStyle}"/>
                <TextBlock x:Name="MoreFilterTextBlock" Canvas.Left="557.999" TextWrapping="Wrap" Text="More..." Canvas.Top="91.01" Width="58.001" Height="18.97" Foreground="#FF348899" Cursor="Hand" MouseDown="MoreFilterTextBlock_MouseDown"/>
                <TextBlock TextWrapping="Wrap" Text="Additional Search Criteria ▼  " FlowDirection="RightToLeft" Height="20.303" Canvas.Left="10" Canvas.Top="141.944" Width="153.503"/>
                <TextBlock TextWrapping="Wrap" Text="Start Time" RenderTransformOrigin="0.5,0.5" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="172.247" Width="103.255"/>
                <TextBlock TextWrapping="Wrap" Text="Days" RenderTransformOrigin="0.5,0.5" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="201.55" Width="103.255"/>
                <TextBlock TextWrapping="Wrap" Text="Tag" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="230.853" Width="103.255"/>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="62.721"/>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="201.55">
                    <ComboBoxItem Content="Mon/Wed/Fri"/>
                    <ComboBoxItem Content="Tues/Thur"/>
                </ComboBox>
                <Slider Canvas.Left="178.372" Canvas.Top="172.247" Width="200"/>
            </Canvas>


            <ScrollViewer Grid.Row="1"  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Width="646" HorizontalAlignment="Left" Margin="0,0,-10,0" d:IsHidden="True">
                <StackPanel x:Name="SearchResultStackPanel" Grid.Row="1" ScrollViewer.CanContentScroll="True" Width="616.093"/>
            </ScrollViewer>

        </Grid>
        <Grid x:Name="RightGrid" HorizontalAlignment="Left" Margin="641,0,0,0" Width="631">

            <Grid x:Name="DegreeNavigator" HorizontalAlignment="Left" Height="600.5" Margin="0,92,0,0" VerticalAlignment="Top" Width="631">
                <DataGrid x:Name="ReqTable" ItemsSource="{Binding}" IsReadOnly="True" HorizontalAlignment="Stretch" Margin="10,45.5,10,0" VerticalAlignment="Stretch" FrozenColumnCount="2" AutoGenerateColumns="False" AlternatingRowBackground="#F2EBC7" AlternationCount="2">

                    <DataGrid.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Style.Triggers>
                                <Trigger Property="DataGridCell.IsSelected" Value="True">
                                    <Setter Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Transparent"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground"
                            Value="{DynamicResource
                                   {x:Static SystemColors.ControlTextBrushKey}}"/>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Transparent"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Requirements}" Header="Requirements" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Applied}" Header="Applied" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Canvas x:Name="DegreeNavIcons" HorizontalAlignment="Left" Height="555" Margin="586,45.5,0,0" VerticalAlignment="Top" Width="35">
                    <Image x:Name="Row1Img" Height="32" Canvas.Top="27" Width="35"/>
                    <Image x:Name="Row2Img" Height="32" Canvas.Top="62" Width="35"/>
                    <Image x:Name="Row3Img" Height="32" Canvas.Top="97" Width="35"/>
                    <Image x:Name="Row4Img" Height="32" Canvas.Top="132" Width="35"/>
                    <Image x:Name="Row5Img" Height="32" Canvas.Top="167" Width="35"/>
                    <Image x:Name="Row6Img" Height="32" Canvas.Top="202" Width="35"/>
                    <Image x:Name="Row7Img" Height="32" Canvas.Top="237" Width="35"/>
                    <Image x:Name="Row8Img" Height="32" Canvas.Top="272" Width="35"/>
                    <Image x:Name="Row9Img" Height="32" Canvas.Top="307" Width="35"/>
                    <Image x:Name="Row10Img" Height="32" Canvas.Top="342" Width="35"/>
                    <Image x:Name="Row11Img" Height="32" Canvas.Top="377" Width="35"/>
                    <Image x:Name="Row12Img" Height="32" Canvas.Top="412" Width="35"/>
                    <Image x:Name="Row13Img" Height="32" Canvas.Top="447" Width="35"/>
                    <Image x:Name="Row14Img" Height="32" Canvas.Top="482" Width="35"/>
                    <Image x:Name="Row15Img" Height="32" Canvas.Top="517" Width="35"/>
                </Canvas>
            </Grid>
            <Button x:Name="ReviewButton" Content="Review a class" HorizontalAlignment="Left" Margin="488.511,118.451,0,0" VerticalAlignment="Top" Width="90" Click="ReviewButton_Click"/>

        </Grid>
    </Grid>
</Window>
