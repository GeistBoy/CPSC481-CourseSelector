<Window x:Class="CPSC481_A5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CPSC481_A5"
        mc:Ignorable="d"
        Title="Schedule Builder" Height="720" Width="1280
        ">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid x:Name="LeftGrid" HorizontalAlignment="Left" Height="689" Margin="0,0,0,0" VerticalAlignment="Top" Width="636">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Canvas x:Name="FilterCanvas" Grid.Row ="0"  Height="350" VerticalAlignment="Top" >
                <TextBlock TextWrapping="Wrap" Background="#FFCAE6EC" Foreground="Black" FontSize="14" Text="Search for Classes" Padding="10,0,0,0" Height="23.721" Width="616"/>
                <TextBlock TextWrapping="Wrap" Text="Subject" RenderTransformOrigin="0.5,0.5" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="34.721" Width="103.255"/>
                <TextBlock TextWrapping="Wrap" Text="Course Number" RenderTransformOrigin="0.5,0.5" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="61.681" Width="103.255"/>
                <TextBlock TextWrapping="Wrap" Text="Tag" FlowDirection="RightToLeft" Height="29.303" Canvas.Left="60.248" Canvas.Top="88.641" Width="103.255"/>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="34.721"/>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="61.681">
                    <ComboBoxItem Content="is exactly"/>
                    <ComboBoxItem Content="is greater than"/>
                    <ComboBoxItem Content="is less than"/>
                </ComboBox>
                <ComboBox HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Canvas.Left="178.372" Canvas.Top="88.641"/>
                <TextBox Height="23" Canvas.Left="303.372" TextWrapping="Wrap" Canvas.Top="61.681" Width="50"/>
                <Button x:Name="SearchButton" Content="Search" Canvas.Left="468" Canvas.Top="88" Width="75" Style="{DynamicResource YellowButtonStyle}"/>
                <TextBlock x:Name="MoreFilterTextBlock" Canvas.Left="558" TextWrapping="Wrap" Text="More..." Canvas.Top="91" Width="58.001" Height="18.97" Foreground="#FF348899" Cursor="Hand" MouseDown="MoreFilterTextBlock_MouseDown"/>
                <TextBlock TextWrapping="Wrap" Text="Additional Search Criteria ▼  " FlowDirection="RightToLeft" Height="20.303" Canvas.Left="10" Canvas.Top="141.944" Width="153.503"/>
            </Canvas>


            <ScrollViewer Grid.Row="1"  VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Disabled" Width="636" HorizontalAlignment="Left">
                <StackPanel x:Name="SearchResultStackPanel" Grid.Row="1" ScrollViewer.CanContentScroll="True" Width="616.093"/>
            </ScrollViewer>

        </Grid>
        <Grid x:Name="RightGrid" HorizontalAlignment="Left" Margin="641,0,0,0" Width="631">

            <Grid x:Name="DegreeNavigator" HorizontalAlignment="Left" Height="600.5" Margin="0,92,0,0" VerticalAlignment="Top" Width="631">
                <DataGrid x:Name="ReqTable" ItemsSource="{Binding}" IsReadOnly="True" HorizontalAlignment="Stretch" Height="555" Margin="10,45.5,57,0" VerticalAlignment="Stretch" Width="564" FrozenColumnCount="2" AutoGenerateColumns="False" AlternatingRowBackground="#F2EBC7" AlternationCount="2">

                    <DataGrid.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Style.Triggers>
                                <Trigger Property="DataGridCell.IsSelected" Value="True">
                                    <Setter Property="BorderBrush">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Transparent"/>
                                        </Setter.Value>
                                    </Setter>
                                    <Setter Property="Foreground"
                            Value="{DynamicResource
                                   {x:Static SystemColors.ControlTextBrushKey}}"/>
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Transparent"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Requirements}" Header="Requirements" Width="*"/>
                        <DataGridTextColumn Binding="{Binding Applied}" Header="Applied" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
            <Button x:Name="ReviewButton" Content="Create Review" HorizontalAlignment="Left" Margin="517.011,110.201,0,0" VerticalAlignment="Top" Width="75" Click="ReviewButton_Click"/>

        </Grid>
    </Grid>
</Window>
